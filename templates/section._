<!DOCTYPE html>
<html>
    <head>
        <title>
            DC Code - <%= title %>
        </title>
        <meta http-equiv='content-type' content='text/html; charset=utf-8' />
        <link rel='stylesheet' media='screen' type='text/css' href='/css/base.css' />
    </head>
    <body>
        <header>
            <div class='right'>
                <a href='/'>home</a>,
                <a href='about.html'>about</a>
            </div>

            <ul class="ancestors">
            <% ancestors.forEach(function(s) { %>
                <li><a href="<%= s.filename%>"><%= s.title%></a></li>
            <% }); %>
            </ul>

            <h1>
                <%= title %>
            </h1>
        </header>

        <div class="content">

        <% body.forEach(function(l) { %>
            <p class="<%= l.class %>" style="margin-left: <%=l.indentation%>em">
                <% l.text.forEach(function(span) { %>
                    <span style="<%- span.style %>"><%= span.text %></span>
                <% }); %>
            </p>
        <% }); %>

        <% if (children) { %>
            <ul>
            <% children.forEach(function(s) { %>
                <li><a href="<%= s.filename%>"><%= s.title%></a></li>
            <% }); %>
            </ul>
        <% } %>

        </div>

        <footer>
            <p class="recency"><%- recency_info %></p>

            <p>This is a fast, unofficial interface to the <a href='http://dccouncil.us/UnofficialDCCode'>Unofficial DC Code</a> by <a href='https://github.com/openlawdc'>openlawdc</a>. Please <a href='https://github.com/openlawdc/simple-2/issues'>report issues</a>.</p>
        </footer>
    </body>
</html>
