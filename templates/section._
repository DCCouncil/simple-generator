<!DOCTYPE html>
<html>
    <head>
        <title>
            DC Code <%= title %>
        </title>
        <meta http-equiv='content-type' content='text/html; charset=utf-8' />
        <link rel='stylesheet' media='screen' type='text/css' href='/css/base.css' />
    </head>
    <body>
        <header>
            <div class='right'>
                <a href='/'>home</a>,
                <a href='about.html'>about</a>
            </div>
            <h1>
                <%= title %>
            </h1>
            <% if (is_index_file) { %>
                <p><a href='../'>Up a Level</a></p>
            <% } else { %>
                <p><a href='index.html'>Up a Level</a></p>
            <% } %>
        </header>

        <% body.forEach(function(l) { %>
            <p class="<%= l.class %>" style="margin-left: <%=l.indentation%>em">
                <% l.text.forEach(function(span) { %>
                    <span style="<%- span.style %>"><%- span.text %></span>
                <% }); %>
            </p>
        <% }); %>

        <% if (children) { %>
            <ul>
            <% children.forEach(function(s) { %>
                <li><a href="<%= s.filename%>"><%= s.title%></a></li>
            <% }); %>
            </ul>
        <% } %>
    </body>
</html>
